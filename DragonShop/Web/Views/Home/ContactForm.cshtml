@model ContactViewModel
@{
    ViewData["Title"] = "Dragon Shop - Контакты";
    Layout = "_Layout";
}


<div class="col-6">
    <h1 class="mb-4">Форма обратной связи</h1>
    <form asp-controller="Home" asp-action="ContactForm" method="post">
        <div class="mt-3 mb-3 text-danger"><span asp-validation-for="Name"></span></div>
        <div class="form-group mb-4"><input asp-for="Name" placeholder="Владимир" class="form-control" /></div>

        <div class="mt-3 mb-3 text-danger"><span asp-validation-for="Email"></span></div>
        <div class="form-group mb-4"><input asp-for="Email" placeholder="vladymyr.kovalenko@gmail.com" class="form-control" /></div>

        <div class="mt-3 mb-3 text-danger"><span asp-validation-for="Message"></span></div>
        <div class="form-group mb-4"><textarea asp-for="Message" placeholder="Ваше сообщение" class="form-control" rows="10" cols="10"></textarea></div>

        <button type="submit" class="float-right">Отправить</button>
    </form>
</div>